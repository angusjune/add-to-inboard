{
  "name": "__MSG_extName__",
  "short_name": "Inboard",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "__MSG_extTitle__"
  },

  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "*://*/*"
  ]
}
